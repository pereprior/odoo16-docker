<odoo>

    <!-- Informes -->
    <report
        id="report_monitor"
        string="Informe sobre monitores"
        model="ir.actions.report"
        report_type="qweb-pdf"
        name="escuela_vela.report_monitor_template"
        file="escuela_vela.report_monitor_template"
    />

    <report
        id="report_alumno"
        string="Informe sobre alumnos"
        model="ir.actions.report"
        report_type="qweb-pdf"
        name="escuela_vela.report_alumno_template"
        file="escuela_vela.report_alumno_template"
    />


    <!-- Plantillas -->
    <template id="escuela_vela.report_monitor_template">
        <t t-call="web.external_layout">
            <div class="header">
                <h2>Informe de Monitores</h2>
            </div>
            <div class="page">
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Código de Identificación</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><t t-esc="doc.name"/></td>
                                <td><t t-esc="doc.identification_code"/></td>
                                <td><t t-esc="doc.email"/></td>
                                <td><t t-esc="doc.tlf"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <p>Pie de pagina</p>
            </div>
        </t>
    </template>

    <template id="escuela_vela.report_alumno_template">
        <t t-call="web.external_layout">
            <div class="header">
                <h2>Informe de Alumnos</h2>
            </div>
            <div class="page">
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Número de Registro</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Escuela</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><t t-esc="doc.name"/></td>
                                <td><t t-esc="doc.registration_number"/></td>
                                <td><t t-esc="doc.email"/></td>
                                <td><t t-esc="doc.tlf"/></td>
                                <td><t t-esc="doc.escuela_id.name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <p>Pie de pagina</p>
            </div>
        </t>
    </template>

</odoo>